<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:fillColor="#FFFFFFFF"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#a0000000">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vip_font"
                            android:text="ريال"
                            android:textSize="20sp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/ttPrice"
                            android:padding="7dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ttPrice"
                            android:fontFamily="@font/vip_font"
                            android:text="1800"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="7dp"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vip_font"
                            android:text="بقيمة"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="7dp"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/faviamge"
                        android:onClick="AddToFavoutit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fav_white"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
                <RelativeLayout

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:onClick="openImages"/>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:src="@drawable/expand"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="5dp"
                    android:background="@color/white">
                    <ImageView
                        android:onClick="Finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back_black"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:id="@+id/fab_edit"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            app:backgroundTint="@color/primary"/>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_sheet"
        android:background="@drawable/top_border"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="200dp"
        android:visibility="visible"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <LinearLayout
            android:background="@drawable/top_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:visibility="visible"
                android:id="@+id/Building"
                layout="@layout/build_detials_view" />
            <include layout="@layout/flat_detials_view"
                android:id="@+id/flat_view"
                android:visibility="gone"/>
            <include
                android:visibility="gone"
                android:id="@+id/home_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/home_layout_detials_view"/>
            <include android:visibility="gone"
                android:id="@+id/villa_view"
                layout="@layout/villa_detials_view"/>
            <include android:visibility="gone"
                android:id="@+id/level_view"
                layout="@layout/level_view_detials"/>
            <include layout="@layout/farm_view_detials"
                android:id="@+id/farm_view_details"
                android:visibility="gone"/>
            <include layout="@layout/market_detials_view"
                android:id="@+id/market_view_detials"
                android:visibility="gone"/>
            <include layout="@layout/sweet_view_detials"
                android:id="@+id/ressort_details_view"
                android:visibility="gone"/>
            <include layout="@layout/ground_detials_view"
                android:id="@+id/groundDetials"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="7dp"
                android:gravity="center">
                <Button
                    android:id="@+id/btnChat"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:onClick="Chat"
                    android:layout_below="@id/lin"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="تواصل"
                    android:textColor="#fff"
                    android:fontFamily="@font/vip"
                    android:textSize="15dp"
                    />
                <Button
                    android:id="@+id/btnChooser"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:onClick="choseOffer"
                    android:layout_below="@id/lin"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="اختيار هذا العرض"
                    android:textColor="#fff"
                    android:fontFamily="@font/vip"
                    android:textSize="15dp"
                    />
                <Button

                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/primary"
                    android:onClick="Map"
                    android:layout_below="@id/lin"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="مشاهدة على الخريطه"
                    android:textColor="#fff"
                    android:fontFamily="@font/vip"
                    android:textSize="15dp"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="إبلاغ عن هذا العرض"
                android:fontFamily="@font/vip"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="offerFeedBack"
                android:padding="10dp"
                android:textColor="@color/wallet_holo_blue_light"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>