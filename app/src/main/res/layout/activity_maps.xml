<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <Button
    android:visibility="gone"
    android:onClick="Add"
    android:layout_alignParentBottom="true"
    android:id="@+id/confirmOffer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:textColor="#fff"
    android:textSize="15dp"
    android:text="تأكيد الطلب"/>

        <LinearLayout
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.design.widget.TabLayout
                android:visibility="gone"
                app:tabMode="scrollable"
                android:layoutDirection="rtl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tablayout"
                android:layout_alignParentTop="true"
                ></android.support.design.widget.TabLayout>

            <android.support.v7.widget.CardView
                android:layout_gravity="center"
                app:contentPadding="7dp"
                android:layout_margin="7dp"
                app:cardCornerRadius="17dp"
                android:elevation="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:background="#AAffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:id="@+id/rl">

                    <TextView
                        android:id="@+id/cityName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/vip"
                        android:text="لم يتم تحديد الموقع افتح GPS "
                        android:textColor="#000"
                        android:textSize="20dp" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout

                android:id="@+id/li"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone">
                <android.support.v7.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="7dp"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:textColor="#000"
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vip"
                        android:padding="5dp"
                        android:text="منشأه للايجار" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="7dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:textColor="#000"
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vip"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:text="name" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="7dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:textColor="#000"
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vip"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:text="name" />
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        <android.support.design.widget.BottomNavigationView
            android:visibility="gone"
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />
        <com.luseen.spacenavigation.SpaceNavigationView
            android:visibility="gone"
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            app:active_item_color="@color/white_with_alpha"
            app:centre_button_color="@color/accent"
            app:inactive_item_color="@android:color/white"
            app:space_background_color="@color/primary_darker"
            app:centre_button_icon="@drawable/ic_add"
            app:space_item_icon_size="@dimen/space_item_icon_default_size"
            app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
            app:space_item_text_size="@dimen/space_item_text_default_size" />
        <android.support.design.widget.FloatingActionButton
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/primary"
            android:src="@drawable/ic_add_white"
            android:id="@+id/fabAdd"
            android:elevation="7dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="25dp"/>
<android.support.v7.widget.CardView
    android:id="@+id/cvDelet"
    android:visibility="visible"
    android:elevation="7dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_margin="15dp"
    android:padding="5dp"
    >
    <ImageView
        android:visibility="visible"
        android:padding="7dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/remove"
        android:onClick="RemoveMarker"
        />
</android.support.v7.widget.CardView>
    </RelativeLayout>
    <!--Drawer-->

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/nav_header"/>
            <include layout="@layout/menu_content"/>
        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>


