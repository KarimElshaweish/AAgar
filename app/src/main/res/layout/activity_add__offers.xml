<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.sourcey.materiallogindemo.Add_Offers"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="10dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:onClick="Finish"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مطلوب"
            android:textSize="20dp"
            android:fontFamily="@font/vip"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/linear_layout"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الأن أطلب عقارك"/>
        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="و تواصل مع جميع العقارين في"/>
        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مدينتك"/>
    </LinearLayout>


<LinearLayout
    android:layout_margin="10dp"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:text="نوع الطلب "
                android:fontFamily="@font/vip"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="#b1abab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:id="@+id/spinnerType"
                android:layout_height="30dp"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:fontFamily="@font/vip"
                android:layout_width="match_parent"
                android:text="السعر        "
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <EditText
                android:background="#b1abab"
                android:fontFamily="@font/vip"
                android:inputType="number"
                android:id="@+id/priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="المدينه      "
                android:fontFamily="@font/vip"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="#b1abab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/citySpinner"
                >
            </android.support.v7.widget.AppCompatSpinner>

</LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:fontFamily="@font/vip"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="الشارع      "
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:background="#b1abab"
            android:fontFamily="@font/vip"
            android:inputType="text"
            android:id="@+id/StreetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>
    <Button
            android:layout_margin="10dp"
            android:onClick="AddLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textColor="#fff"
            android:background="@color/primary"
            android:text="التالى"
            android:fontFamily="@font/vip"/>
</LinearLayout>
</LinearLayout>
</LinearLayout>