<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:background="#fff"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    tools:context="com.sourcey.materiallogindemo.OfferResult"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_back"
    android:onClick="finish"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/offerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/vip"
                android:gravity="center"
                android:padding="10dp"
                android:text="مطلوب"
                android:textColor="#fff"
                android:textSize="22dp"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profileImage"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar_logo"
                android:scaleType="fitCenter"
                app:riv_corner_radius="20sp"
                app:riv_border_width="2dip"
                app:riv_border_color="#fff"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                />
        </LinearLayout>

    </RelativeLayout>

       <RelativeLayout
           android:padding="7dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:visibility="gone"
               android:layout_alignParentRight="true"
               android:onClick="showOnMap"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/googl_map"/>
       </RelativeLayout>
           <include layout="@layout/offer_chat_item_list"
               android:layout_margin="7dp"
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               />
       <RelativeLayout
           android:onClick="showOnMap"
           android:layout_margin="10dp"
           android:background="@drawable/border_button_new"
           android:layout_width="match_parent"
           android:padding="10dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_centerHorizontal="true"
               android:layout_centerVertical="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/vip_font"
               android:textColor="#fff"
               android:textSize="18dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:text="مشاهدة هذا الطلب على الخريطه"/>
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/white_pin"/>
       </RelativeLayout>

       <LinearLayout
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/recommencLayout">
           <com.google.android.material.tabs.TabLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:tabIndicatorColor="@color/primary"
               app:tabIndicatorHeight="2dp"
               android:id="@+id/tb"></com.google.android.material.tabs.TabLayout>

           <androidx.viewpager.widget.ViewPager
               android:layout_below="@id/tb"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/vp"/>

<!--           <TextView-->
<!--               android:layout_width="wrap_content"-->
<!--               android:layout_height="wrap_content"-->
<!--               android:text="العروض المتاحة المشابهه"-->
<!--               android:fontFamily="@font/vip_font"-->
<!--               android:textColor="#000"-->
<!--               android:layout_gravity="center"/>-->
<!--           <GridView-->
<!--               android:padding="15dp"-->
<!--               android:id="@+id/gv"-->
<!--               android:layout_width="match_parent"-->
<!--               android:layout_height="wrap_content"-->
<!--               android:numColumns="2"/>-->
       </LinearLayout>

       <TextView
           android:id="@+id/offerState"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="العرض المختار"
           android:fontFamily="@font/vip_font"
           android:layout_gravity="center"
           android:gravity="center"
           android:padding="7dp"
           android:textSize="15dp"/>
       <LinearLayout
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/customerLayout">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="لا توجد عروض مقدمة"
               android:id="@+id/noOffer"
               android:fontFamily="@font/vip_font"
               android:textSize="15sp"
               android:visibility="gone"
               android:textColor="#000"/>
           <ProgressBar
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:id="@+id/pb"/>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:id="@+id/customerRV"
               android:layout_height="wrap_content"/>
       </LinearLayout>

   </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/bottomUpNotification"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#ff1a1a"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="تم إرسال العرض"
            android:fontFamily="@font/gess_two_medium"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:gravity="center"/>
    </RelativeLayout>
</RelativeLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include
                    layout="@layout/nav_header"/>
                <include layout="@layout/menu_content"/>
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>