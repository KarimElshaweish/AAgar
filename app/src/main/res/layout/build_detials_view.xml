<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:padding="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ريال"
                                android:textSize="20sp"
                                android:fontFamily="@font/gess_two_medium"
                                android:textColor="#7d7d7d"
                               />
                            <TextView
                                android:padding="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18000"
                                android:fontFamily="@font/gess_two_medium"
                                android:textColor="#7d7d7d"
                                android:textSize="20sp"
                                android:id="@+id/buildPrice"/>

                        </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="القاهره"
                        android:fontFamily="@font/gess_two_medium"
                        android:textColor="#7D7D7D"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/buildCity"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pin_gray"/>

                </LinearLayout>
            </RelativeLayout>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="شرق"
                            android:padding="3dp"
                            android:textSize="15sp"
                            android:textColor="#7d7d7d"
                            android:fontFamily="@font/gess_two_medium"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/navigation"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dircetions"/>
                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="30dp"
                android:background="#DEDEDE"/>


                    <LinearLayout
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:padding="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="سنه"
                                android:textSize="15sp"
                                android:fontFamily="@font/gess_two_medium"
                                android:textColor="#7D7D7D"
                                android:paddingLeft="10dp"
                                android:layout_alignParentLeft="true"/>
                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/buildAge"/>

                        </LinearLayout>
                        <TextView
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="عمر العقار "
                            android:textSize="15sp"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="#000"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="right"
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="إيجار"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="#7D7D7D"
                            android:textSize="15sp"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/commtype"/>
                        <TextView
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="المطلوب  "
                            android:textSize="15sp"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="#000"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|right"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/marketNumber"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="3"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="#7D7D7D"
                            android:textSize="15sp" />

                        <TextView
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/gess_two_medium"
                            android:paddingRight="7dp"
                            android:text="عدد المحلات  "
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>
            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:weightSum="2">-->
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:padding="10dp"
                                android:id="@+id/buildready"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/gess_two_medium"
                                android:text="نعم"
                                android:textColor="#7D7D7D"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/gess_two_medium"
                            android:text="مؤثثة  "
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/roomNumbers"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="#7D7D7D"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gess_two_medium"
                            android:text="عدد الغرف  "
                            android:textColor="#000"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:gravity="center|right"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gess_two_medium"
                                android:padding="10dp"
                                android:text="متر"
                                android:textColor="#7D7D7D"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/streetWidth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:text="3"
                                android:fontFamily="@font/gess_two_medium"
                                android:textColor="#7D7D7D"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <TextView
                            android:padding="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/gess_two_medium"
                            android:text="عرض الشارع  "
                            android:textColor="#000"
                            android:textSize="15sp" />



                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/people"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/gess_two_medium"
                        android:text="تجارى"
                        android:padding="10dp"
                        android:textColor="#7D7D7D"
                        android:textSize="15sp" />

                    <TextView
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/gess_two_medium"
                        android:paddingRight="7dp"
                        android:text="نوع العقار  "
                        android:textColor="#000"
                        android:textSize="15sp" />

                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="30dp"
                android:background="#DEDEDE"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تفاصيل العرض"
                    android:fontFamily="@font/vip_font"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/detialsFull"/>
                <ImageView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"/>
            </LinearLayout>

            <!--            </LinearLayout>-->
<!--        </LinearLayout>-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التفاصيل"
            android:textSize="15sp"
            android:fontFamily="@font/vip_font"
            android:textColor="#000"
            android:layout_alignParentRight="true"/>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نعم"
            android:fontFamily="@font/vip_font"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/buildTypeComm"/>
    </RelativeLayout>
</LinearLayout>