<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/blockingBar"
                android:orientation="vertical">

                <!--        <TextView-->
                <!--            android:visibility="gone"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:text="فك حذر هذا الشخص"-->
                <!--            android:gravity="center"-->
                <!--            android:textColor="#3498db"-->
                <!--            android:layout_below="@id/titleBar"-->
                <!--            android:id="@+id/ubblocking"-->
                <!--            android:padding="5dp"-->
                <!--            />-->
            </LinearLayout>

            <LinearLayout

                android:id="@+id/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/blockingBar"
                >
                <LinearLayout
                    android:id="@+id/liTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="الصفقة"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="#4286f4"
                            android:layout_gravity="right"
                            android:layout_margin="15dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_below="@id/form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المحادثة"
                android:id="@+id/chatText"
                android:fontFamily="@font/gess_two_medium"
                android:gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/chatText"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv"
                app:stackFromEnd="true"
                android:layout_above="@id/btt"
                tools:ignore="NotSibling" />


            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/btt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#d3d3d3"/>
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sentImage"
                    android:layout_margin="4dp"
                    >
                    <TextView
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="إرسال"
                        android:fontFamily="@font/gess_two_medium"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/send_img"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="4dp"
                    android:id="@+id/write"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/sentImage"
                    android:layout_height="wrap_content">
                    <EditText
                        android:padding="10dp"
                        android:background="@color/space_transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_sent"
                        android:inputType="text"
                        android:fontFamily="@font/gess_two_medium"
                        android:hint="كتابة الرساله .... "/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>


    </FrameLayout>
</layout>
