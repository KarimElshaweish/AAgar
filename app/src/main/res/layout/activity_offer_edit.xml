<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferEdit.OfferEdit"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="10dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:onClick="Finish"
            />
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="صور الطلب"
            android:textSize="20dp"
            android:fontFamily="@font/vip"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/descLin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:padding="7dp"
            android:visibility="visible"
            android:layout_margin="7dp"
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_layout"
            android:text="انهاء التعديل"
            android:textSize="20sp"
            android:onClick="summitEdit"
            android:fontFamily="@font/vip_font"
            android:textColor="@color/primary"/>

    </LinearLayout>
    <TextView
        android:id="@+id/mapsee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descLin"
        android:fontFamily="@font/vip"
        android:textColor="#000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:onClick="seeMap"
        android:text="مشاهده على الخريطه"/>
    <LinearLayout
        android:layout_below="@id/mapsee"
        android:padding="10dp"
        android:id="@+id/lin"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right">
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/tab_layout"
            android:id="@+id/orderPrice"
            android:textColor="#000"
            android:fontFamily="@font/vip"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="التفاصيل"/>
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/tab_layout"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/orderDescription"
            android:textColor="#000"
            android:fontFamily="@font/vip"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" الطلب"/>
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@drawable/tab_layout"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/orderType"
            android:textColor="#000"
            android:fontFamily="@font/vip"
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="نوع الطلب"/>
        <TextView
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="@color/primary"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/orderPicture"
            android:textColor="#fff"
            android:fontFamily="@font/vip"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="صور الطلب"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/lin"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="7dp"
            android:elevation="7dp"
            app:contentPadding="7dp"
            android:layout_margin="7dp"
            android:id="@+id/cv2">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list"></ListView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:elevation="7dp"
            app:cardCornerRadius="7dp"
            app:contentPadding="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.FloatingActionButton
                    android:onClick="AddPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_upload_image"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imgViewUpload"
                    app:elevation="7dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="#fff"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
          <android.support.v7.widget.RecyclerView
              android:layout_below="@id/rv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/nRv"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_below="@id/lin"
        android:layout_above="@id/bottom">

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:layout_width="wrap_content"
            app:cardCornerRadius="50dp"
            app:cardPreventCornerOverlap="false"
            android:layout_gravity="center"
            app:contentPadding="15dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:onClick="AddPicture"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_upload_image"
                android:layout_margin="5dp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:elevation="7dp"
            app:contentPadding="7dp"
            android:layout_margin="7dp"
            android:id="@+id/cv3">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list2"></ListView>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp"
            android:elevation="7dp"
            app:contentPadding="7dp"
            android:layout_margin="7dp"
            android:id="@+id/cv4">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include
                        android:visibility="gone"
                        android:id="@+id/flat_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/flat_offer_result"/>
                    <include
                        android:visibility="gone"
                        android:id="@+id/villa_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/villa_detal_view"/>

                    <include
                        android:visibility="gone"
                        android:id="@+id/build_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/build_detial_view"/>
                    <include
                        android:visibility="gone"
                        android:id="@+id/home_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/home_detials_view"/>
                    <include
                        android:visibility="gone"
                        android:id="@+id/level_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/level_view"/>
                    <include
                        android:visibility="gone"
                        android:id="@+id/farme_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/farm_view"/>

                    <include
                        android:visibility="gone"
                        android:id="@+id/market_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/market_view"/>

                    <include
                        android:visibility="gone"
                        android:id="@+id/sweet_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        layout="@layout/sweet_view"/>

                    <include
                        android:id="@+id/groundView"
                        layout="@layout/ground_layout_view"
                        android:visibility="gone"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="السعر الإجمالى"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:id="@+id/total_price"
                            android:fontFamily="@font/vip_font"
                            android:textColor="#000"
                            android:layout_gravity="right"
                            android:gravity="right"/>
                        <EditText
                            android:id="@+id/total_price_edit2"
                            android:hint="أدخل هنا"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:padding="7dp"
                            android:inputType="number"
                            android:layout_margin="10dp"
                            android:background="@drawable/tab_layout"
                            android:layout_toLeftOf="@id/total_price"/>
                    </RelativeLayout>
                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التفاصيل"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:fontFamily="@font/vip_font"
                            android:textColor="#000"
                            android:layout_margin="10dp"
                            android:textSize="15sp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="@drawable/tab_layout"
                            android:layout_margin="10dp"
                            android:id="@+id/detialsFull2"/>
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <Button
        android:visibility="gone"
        android:layout_margin="10dp"
        android:onClick="uploadToFirebase"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="@color/primary"
        android:textColor="#fff"
        android:text="إضافة عرض"/>
    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutForm">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="نوع العرض "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="#b1abab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:id="@+id/spinnerType"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="السعر        "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="#b1abab"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="الوصف      "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:onClick="AddPicture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_upload_image"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            />
                        <EditText
                            android:background="#b1abab"
                            android:inputType="text"
                            android:id="@+id/descText"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            />
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="الشارع      :"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="#b1abab"
                        android:inputType="text"
                        android:id="@+id/StreetText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="المدينه      "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="#b1abab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:id="@+id/citySpinner"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv1"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:visibility="gone"
            android:padding="5dp"
            android:id="@+id/addressTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vip"
            android:textColor="#000"
            android:text="العنوان "/>
        <android.support.design.widget.FloatingActionButton
            app:backgroundTint="@color/primary"
            android:src="@drawable/ic_left_next"
            android:padding="5dp"
            android:elevation="7dp"
            android:visibility="gone"
            android:layout_margin="7dp"
            android:onClick="next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vip"
            android:id="@+id/btnNtextStep"
            />
    </LinearLayout>

</RelativeLayout>