<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/city"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sourcey.materiallogindemo.BuildDetial">
    <RelativeLayout
        android:onClick="openImages"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
            <RelativeLayout
                android:onClick="openImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fillColor="#FFFFFFFF"
                    app:autoPlay="false"
                    app:pageColor="#00000000"
                    app:radius="6dp"
                    app:slideInterval="3000"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/soldImage"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="20dp"
                    android:src="@drawable/sold"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#a0000000">

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vip_font"
                            android:text="ريال"
                            android:textSize="20sp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_alignLeft="@id/ttPrice"
                            android:padding="7dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ttPrice"
                            android:fontFamily="@font/vip_font"
                            android:text="1800"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="7dp"
                            android:textSize="20sp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/vip_font"
                            android:text="بقيمة"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="7dp"
                            android:textSize="20sp"
                            android:textColor="#fff"/>

                    </LinearLayout>
                    <ImageView
                        android:id="@+id/faviamge"
                        android:onClick="AddToFavoutit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fav_white"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:onClick="openImages"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@color/primary"
                        android:id="@+id/toprl"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:onClick="Finish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_left_arrow_white"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/offerOrderUserName"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textSize="15dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/gess_two_medium"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:gravity="center|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:srcCompat="@drawable/ic_edit"
                                android:id="@+id/fab_edit"
                                android:layout_margin="3dp"
                                app:backgroundTint="@color/primary"/>
                            <ImageView
                                android:onClick="openImages"
                                android:layout_gravity="center"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="2dp"
                                android:src="@drawable/ic_expand"/>
                        </LinearLayout>

                    </RelativeLayout>

                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_below="@id/toprl"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/circle"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/count_utton"
                        android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:text="3"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/chatCardViwLayout"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:onClick="Chat"
            android:elevation="10dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user name"
                    android:fontFamily="@font/gess_two_medium"
                    android:textColor="@color/black"
                    android:id="@+id/userNameChat"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/btnChat"
                    android:src="@drawable/chat_floating"
                    android:contentDescription="@string/chat" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/top_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@android:color/black"
                android:fontFamily="@font/gess_two_medium"
                android:textSize="23dp"
                android:gravity="center"
                android:id="@+id/title"/>
            <include
                android:visibility="gone"
                android:id="@+id/Building"
                layout="@layout/build_detials_view" />
            <include layout="@layout/flat_detials_view"
                android:id="@+id/flat_view"
                android:visibility="gone"/>
            <include
                android:visibility="gone"
                android:id="@+id/home_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/home_layout_detials_view"/>
            <include android:visibility="gone"
                android:id="@+id/villa_view"
                layout="@layout/villa_detials_view"/>
            <include android:visibility="gone"
                android:id="@+id/level_view"
                layout="@layout/level_view_detials"/>
            <include layout="@layout/farm_view_detials"
                android:id="@+id/farm_view_details"
                android:visibility="gone"/>
            <include layout="@layout/market_detials_view"
                android:id="@+id/market_view_detials"
                android:visibility="gone"/>
            <include layout="@layout/sweet_view_detials"
                android:id="@+id/ressort_details_view"
                android:visibility="gone"/>
            <include layout="@layout/ground_detials_view"
                android:id="@+id/groundDetials"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/bottomlin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:onClick="Map"
                        android:padding="10dp"
                        android:background="@drawable/border_button_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مشاهدة على الخريطه"
                            android:textColor="#fff"
                            android:fontFamily="@font/gess_two_medium"
                            android:textSize="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                           />
                        <ImageView
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_white_pin"
                            android:layout_marginEnd="10dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/btnChooser"
                        android:onClick="choseOffer"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:background="@drawable/white_new_green_border_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="اختيار هذا العرض"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/gess_two_medium"
                            android:textSize="15dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                           />
                        <ImageView
                            android:layout_marginRight="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_white_pin"
                            android:layout_marginEnd="10dp" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إبلاغ عن هذا العرض"
                    android:fontFamily="@font/vip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="offerFeedBack"
                    android:padding="10dp"
                    android:textColor="@color/wallet_holo_blue_light"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</RelativeLayout>