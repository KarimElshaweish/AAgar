<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:background="@android:color/white"
    tools:context="com.sourcey.materiallogindemo.goodOffersAct"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10"
        android:id="@+id/titleBar"
        android:background="@color/primary">
        <LinearLayout
            android:weightSum="10"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/chaticon"
                    android:onClick="openChat"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_white_chat_ic"/>
            </RelativeLayout>
            <ImageView
                android:visibility="gone"
                android:layout_weight="3"
                android:layout_gravity="end|center"
                android:onClick="openIgnored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_custome_ignored"/>



        </LinearLayout>
        <ImageView
            android:layout_weight="4"
            android:id="@+id/offerText"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/vip"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/new_logo_client"
            android:textColor="@color/primary"
            />


            <ImageView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:onClick="seedl"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_group_104"
                android:layout_alignParentRight="true"
                />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_ic"
                />
            <ImageView
                android:onClick="profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:onClick="openFilter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="تصفية"
            android:drawableRight="@drawable/ic_filter"
            android:textColor="#d3d3d3"
            android:fontFamily="@font/gess_two_medium"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <Button
            android:onClick="tabClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="قائمة التجاهل"
            android:layout_weight="1"
            android:id="@+id/ignoredButton"
            android:background="@android:color/white"
            android:fontFamily="@font/gess_two_medium"
            android:textColor="#d3d3d3"/>
        <Button
            android:id="@+id/ordersButton"
            android:onClick="tabClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="الطلبات"
            android:background="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/gess_two_medium"
            android:textColor="@color/primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  لاتوجود طلبات"
            android:padding="10dp"
            android:id="@+id/noOrder"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:visibility="visible"
            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:id="@+id/pb"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
    android:id="@+id/navigationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:visibility="gone"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/nav_header"/>
        <include layout="@layout/menu_content"/>
    </LinearLayout>
</com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>