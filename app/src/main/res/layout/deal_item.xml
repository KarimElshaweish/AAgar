<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:elevation="25dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cv"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="vertical"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="12dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/vip_font"
                android:gravity="center"
                android:padding="5dp"
                android:text="عقار"
                android:textColor="#000"
                android:textSize="25dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/vip"
                android:gravity="right"
                android:text="ريال"
                android:textColor="#000" />

            <TextView
                android:id="@+id/price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="200"
                android:textColor="#000" />

            <TextView
                android:id="@+id/city"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/vip"
                android:gravity="right"
                android:text="المدينة"
                android:textColor="#000" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/vip"
                android:gravity="right"
                android:text="قيمة الصفقة"
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/vip"
                android:gravity="right"
                android:text="ريال"
                android:textColor="#000" />

            <TextView
                android:id="@+id/app_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="200"
                android:textColor="#000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:fontFamily="@font/vip"
                android:gravity="right"
                android:text="عمولة الصفقة"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="7dp"
            android:orientation="horizontal">

            <Button
                android:layout_margin="3dp"
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_accept_button"
                android:fontFamily="@font/vip"
                android:text="موافق"
                android:textColor="#fff" />

            <Button
                android:layout_margin="3dp"
                android:id="@+id/cansel"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/refused_button"
                android:fontFamily="@font/vip"
                android:text="غير موافق"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
