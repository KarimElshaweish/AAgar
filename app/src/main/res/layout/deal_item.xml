<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="7dp"
    android:orientation="vertical"
    android:layout_margin="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout">
<TextView
    android:id="@+id/type"
    android:fontFamily="@font/vip"
    android:textColor="#000"
    android:drawableRight="@drawable/ic_build"
    android:drawablePadding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="عقار"
    android:layout_gravity="right"
    android:gravity="right"/>
    <TextView
    android:id="@+id/city"
    android:fontFamily="@font/vip"
    android:textColor="#000"
    android:drawableRight="@drawable/ic_pin"
    android:drawablePadding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="المدينة"
    android:layout_gravity="right"
    android:gravity="right"/>
    <TextView
    android:id="@+id/price"
    android:fontFamily="@font/vip"
    android:textColor="#000"
    android:drawableRight="@drawable/ic_money"
    android:drawablePadding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="السعر"
    android:layout_gravity="right"
    android:gravity="right"/>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="موافق"
            android:fontFamily="@font/vip"
            android:textColor="#fff"
            android:id="@+id/confirm"/>
        <Button
            android:layout_margin="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="غير موافق"
            android:fontFamily="@font/vip"
            android:textColor="#fff"
            android:id="@+id/cansel"/>
    </LinearLayout>
</LinearLayout>