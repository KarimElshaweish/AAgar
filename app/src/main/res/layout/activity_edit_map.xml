<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <Button
        android:onClick="changeLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/changeText"
        android:fontFamily="@font/vip"
        android:textSize="16sp"
        android:background="#fff"
        android:id="@+id/btnChangelocation"/>
<fragment
    android:layout_below="@id/btnChangelocation"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sourcey.materiallogindemo.OfferEdit.EditMapActivity" />
</RelativeLayout>