<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    tools:context="com.sourcey.materiallogindemo.MyOfferNeeded"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

     <RelativeLayout
         android:id="@+id/titleBar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/primary"
         android:orientation="horizontal"
         android:padding="10dp">

         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_alignParentRight="true"
             android:onClick="seedl"
             android:layout_centerVertical="true"
             app:srcCompat="@drawable/ic_group_104"
             android:layout_alignParentEnd="true" />


         <TextView
             android:id="@+id/phoneumber"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:layout_gravity="center"
             android:fontFamily="@font/gess_two_medium"
             android:gravity="center"
             android:visibility="gone"
             android:text="الطالبات القائمة"
             android:textColor="@color/white"
             android:textSize="15dp" />
         <ImageView
             android:id="@+id/offerText"
             android:layout_width="wrap_content"
             android:layout_height="30dp"
             android:layout_gravity="center"
             android:fontFamily="@font/vip"
             android:gravity="center"
             android:src="@drawable/new_logo_client"
             android:textColor="@color/primary"
             />

         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <Spinner
                 android:visibility="gone"
                 android:layout_alignParentStart="true"
                 android:layout_centerVertical="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/spinner"
                 />
<!--             <ImageView-->
<!--                 android:onClick="openIgnored"-->
<!--                 android:layout_width="wrap_content"-->
<!--                 android:layout_height="wrap_content"-->
<!--                 android:src="@drawable/pin_ic_ignored"/>-->
         </LinearLayout>

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:onClick="openChat"
             android:visibility="visible"
             android:layout_alignParentLeft="true"
             app:srcCompat="@drawable/ic_white_chat_ic"
              />
     </RelativeLayout>

     <androidx.cardview.widget.CardView
         android:visibility="gone"
         android:id="@+id/notifcation"
         android:layout_below="@id/titleBar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
             <ImageView
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_margin="10dp"
                 android:layout_alignParentRight="true"
                 android:src="@drawable/notifcation_ic"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/vip_font"
                 android:text="Notification"
                 android:id="@+id/notifcationTitle"
                 android:layout_centerVertical="true"
                 android:layout_centerHorizontal="true"
                 android:textColor="#000"/>
             <TextView
                 android:onClick="removeNotification"
                 android:layout_margin="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:fontFamily="@font/vip_font"
                 android:layout_centerVertical="true"
                 android:text="إزاله"/>
         </RelativeLayout>
     </androidx.cardview.widget.CardView>

     <TextView
         android:id="@+id/noOffer"
         android:fontFamily="@font/vip"
         android:textSize="15dp"
         android:layout_gravity="center"
         android:layout_marginTop="10dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="لاتوجد طلبات"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv"></androidx.recyclerview.widget.RecyclerView>
 </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/primary"
        android:src="@drawable/ic_add_white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:onClick="OpenAddOffer"/>
</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include
                layout="@layout/nav_header"/>
            <include layout="@layout/menu_content"/>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>