<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="3dp"
   android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

 <RelativeLayout
     android:id="@+id/rl"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_info"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_margin="@dimen/_10sdp"
      android:id="@+id/information"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#95a5a6"/>
   <LinearLayout

       android:layout_gravity="right"
       android:gravity="right"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <TextView
        android:paddingRight="3dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شقة"
        android:layout_marginTop="5dp"
        android:id="@+id/buildType"
        android:fontFamily="@font/vip_font"
        android:textColor="#000"/>
    <TextView
        android:drawablePadding="7dp"
        android:layout_gravity="center"
        android:drawableRight="@drawable/buildmarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إيجار"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/type"
        android:fontFamily="@font/vip_font"
        android:textColor="#000"/>

   </LinearLayout>

   <LinearLayout
       android:layout_gravity="right"
       android:layout_marginTop="5dp"
       android:padding="2dp"
       android:orientation="horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       >
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:text="ريال"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/vip_font"
        android:textColor="#000"
        android:layout_height="wrap_content"/>
    <TextView
        android:drawableRight="@drawable/ic_money"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:layout_centerHorizontal="true"/>
   </LinearLayout>

   <Button
       android:visibility="visible"
       android:id="@+id/sent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="إرسال"
       android:fontFamily="@font/vip_font"
       android:background="@drawable/border_button_color"
       android:textColor="#fff"/>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="2dp"
       android:background="#DEDEDE"/>
  </LinearLayout>

  <RelativeLayout

      android:id="@+id/sentLayout"
      android:visibility="gone"
      android:background="#AAecf0f1"
      android:layout_width="match_parent"
      android:layout_height="80dp">
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="49dp"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:src="@drawable/ic_sent"/>
  </RelativeLayout>
 </RelativeLayout>

</RelativeLayout>