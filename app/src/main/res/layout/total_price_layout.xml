<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="السعر الإجمالى"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/total_price"
            android:fontFamily="@font/vip_font"
            android:textColor="#000"
            android:layout_gravity="right"
            android:gravity="right"/>
        <EditText
            android:id="@+id/total_price_edit"
            android:hint="أدخل هنا"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="7dp"
            android:layout_margin="10dp"
            android:background="@drawable/tab_layout"
            android:layout_toLeftOf="@id/total_price"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="التفاصيل"
        android:layout_gravity="right"
        android:gravity="right"
        android:fontFamily="@font/vip_font"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:textSize="15sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/tab_layout"
        android:layout_margin="10dp"
        android:id="@+id/detialsFull"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:id="@+id/checkbox"
            android:fontFamily="@font/vip_font"
            android:textColor="#000"
            android:layout_gravity="right"
            android:gravity="right"/>
        <TextView
            android:text="أوافق على الشروط و أحكام شركة تطبيق مطلوب العقارية وأنا المسؤول عن كافة البيانات المدخلى فى محتوى الإعلان"
            android:fontFamily="@font/vip_font"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="7dp"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/checkbox"/>
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="الشروط و الأحكام "
    android:fontFamily="@font/vip_font"
    android:textColor="#3498db"
    android:layout_gravity="center"
    android:gravity="center"
    android:textSize="15sp"/>
    <Button
        android:visibility="gone"
        android:layout_margin="7dp"
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_layout"
        android:text="استمرار"
        android:textSize="20sp"
        android:fontFamily="@font/vip_font"
        android:textColor="@color/primary"/>
    </LinearLayout>