<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="4dp"
            android:paddingRight="7dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/gess_two_medium"
                android:paddingLeft="10dp"
                android:text="ريال"
                android:textColor="#7d7d7d"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/farmPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gess_two_medium"
                android:text="18000"
                android:padding="3dp"
                android:textColor="#7d7d7d"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/farmCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/gess_two_medium"
                android:text="القاهره"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#7d7d7d"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_pin_gray"
                android:fontFamily="@font/vip_font"
                android:paddingRight="7dp"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="30dp"
        android:background="#DEDEDE"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:paddingRight="7dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/vip_font"
            android:text="النوع"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/farmType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/vip_font"
            android:text="عماره"
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>





    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/farmcommtype"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/vip_font"
            android:text="إيجار"
            android:padding="10dp"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gess_two_medium"
            android:paddingRight="7dp"
            android:text="المطلوب"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingRight="7dp">

        <TextView
            android:id="@+id/farmWaterllFailNumber"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="20"
            android:fontFamily="@font/gess_two_medium"
            android:padding="10dp"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/gess_two_medium"
            android:text="عدد الأبار"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingRight="7dp">

        <TextView
            android:id="@+id/farmHairRoom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/vip_font"
            android:text="نعم"
            android:padding="10dp"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/gess_two_medium"
            android:padding="10dp"
            android:text="غرفة شعر"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingRight="7dp">

        <TextView
            android:id="@+id/farmTree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center|right"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/gess_two_medium"
            android:padding="10dp"
            android:text="نعم"
            android:textColor="#7D7D7D"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gess_two_medium"
            android:text="عدد الأشجار "
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="15sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="30dp"
        android:background="#DEDEDE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/farmdetialsFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/vip_font"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/ic_info"
            android:fontFamily="@font/vip_font"
            android:paddingRight="7dp"
            android:text="التفاصيل : "
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>