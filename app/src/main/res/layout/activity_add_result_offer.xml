<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.sourcey.materiallogindemo.AddResultOffer"
android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="10dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:onClick="Finish"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مطلوب"
            android:textSize="20dp"
            android:fontFamily="@font/vip"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/linear_layout"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الأن أطلب عقارك"/>
        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="و تواصل مع جميع العقارين في"/>
        <TextView
            android:textColor="#000"
            android:textSize="15dp"
            android:fontFamily="@font/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مدينتك"/>
    </LinearLayout>
    <Button
        android:layout_margin="10dp"
        android:onClick="uploadToFirebase"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:background="@color/primary"
        android:textColor="#fff"
        android:text="إضافة عرض"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layoutForm">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="نوع العرض "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="#b1abab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:id="@+id/spinnerType"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="السعر        "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:background="#b1abab"
                        android:inputType="number"
                        android:id="@+id/priceText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="الوصف      "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
                      <ImageView
                          android:onClick="AddPicture"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@drawable/ic_upload_image"
                          android:layout_gravity="center"
                          android:layout_margin="5dp"
                          />
                      <EditText
                          android:background="#b1abab"
                          android:inputType="text"
                          android:id="@+id/descText"
                          android:layout_width="match_parent"
                          android:layout_height="30dp"
                          />
                  </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="الشارع      :"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:background="#b1abab"
                        android:inputType="text"
                        android:id="@+id/StreetText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:fontFamily="@font/vip"
                        android:layout_width="match_parent"
                        android:text="المدينه      "
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:background="#b1abab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:id="@+id/citySpinner"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv"></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>