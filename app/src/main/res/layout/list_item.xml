<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_margin="4dp"
    app:cardPreventCornerOverlap="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تم الشراء"
                android:visibility="gone"
                android:fontFamily="@font/gess_two_medium"
                android:textColor="#ff0f0f"
                android:id="@+id/saleDoneText"
                android:layout_alignParentBottom="true"
                android:layout_margin="20dp"/>
            <RelativeLayout
                android:layout_width="10dp"
                android:background="@drawable/back_label"
                android:id="@+id/logo_typ"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                app:cardBackgroundColor="#d6cdcc"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:id="@+id/cv2">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    >
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo1"
                        android:id="@+id/img"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/vs"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مطلوب"
                        android:textColor="#fff"
                        android:fontFamily="@font/vip"
                        android:gravity="center"
                        android:textSize="15dp"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <RelativeLayout
                    android:id="@+id/close_ignore_relative"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        app:srcCompat="@drawable/ic_close_white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="4"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <TextView
                            android:textDirection="rtl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="122"
                            android:id="@+id/price"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:fontFamily="@font/gess_two_medium"/>
                        <TextView
                            android:textDirection="rtl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="الميزانية : "
                            android:textColor="#7D7D7D"
                            android:textSize="14sp"
                            android:fontFamily="@font/gess_two_medium"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right"
                            android:gravity="right">
                            <TextView
                                android:layout_width="50dp"
                                android:gravity="center"
                                android:padding="3dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:textColor="@android:color/black"
                                android:id="@+id/type"
                                android:textSize="15dp"
                                android:fontFamily="@font/gess_two_medium"/>

                            <TextView
                                android:id="@+id/matlop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:fontFamily="@font/gess_two_medium"
                                android:gravity="center"
                                android:padding="3sp"
                                android:paddingBottom="3dp"
                                android:text="مطلوب"
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />
                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_height="match_parent">
                            <TextView
                                android:padding="3sp"
                                android:textDirection="rtl"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@+id/desc"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:fontFamily="@font/gess_two_medium"/>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/seeMore"
                    android:fontFamily="@font/vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مشاهدة المزيد ....."
                    android:gravity="right"
                    android:layout_gravity="right"/>
                <LinearLayout
                    android:id="@+id/lindesc"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="الوصف : ؟؟"
                        android:id="@+id/city"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:fontFamily="@font/vip"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_pin"/>
                </LinearLayout>
                <LinearLayout

                    android:id="@+id/linst"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="شارع  : ؟؟"
                        android:id="@+id/street"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:fontFamily="@font/vip"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_street"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/bottom"
                    android:paddingRight="5dp">

                    <ImageView
                        android:paddingRight="5dp"
                        android:id="@+id/sentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_out_text"
                        android:layout_gravity="right"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/area_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_area"
                        android:layout_gravity="right"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/offer_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_offers"
                        android:layout_gravity="right"
                        android:padding="10dp"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/img_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

