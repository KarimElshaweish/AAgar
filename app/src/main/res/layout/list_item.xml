<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPaddingTop="10dp"
    app:contentPaddingBottom="10dp"
    android:background="#f4f4f4"
    android:layout_marginTop="9dp"
    android:id="@+id/cv">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:visibility="gone"
            app:cardBackgroundColor="#d6cdcc"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:id="@+id/cv2">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                >
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo1"
                    android:id="@+id/img"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/vs"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مطلوب"
                    android:textColor="#fff"
                    android:fontFamily="@font/vip"
                    android:gravity="center"
                    android:textSize="15dp"
                    />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_toRightOf="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:id="@+id/type"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/vip"/>
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="منشأة "
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/vip"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_height="match_parent">
                <TextView
                    android:textDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="السعر : ؟؟"
                    android:id="@+id/desc"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="@font/vip"/>
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_details"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="match_parent">
            <TextView
                android:textDirection="rtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="السعر : ؟؟"
                android:id="@+id/price"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/vip"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_money"/>
        </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/seeMore"
                android:fontFamily="@font/vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مشاهدة المزيد ....."
                android:gravity="right"
                android:layout_gravity="right"/>
        <LinearLayout
            android:id="@+id/lindesc"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="الوصف : ؟؟"
                android:id="@+id/city"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="@font/vip"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pin"/>
        </LinearLayout>
<LinearLayout

    android:id="@+id/linst"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="شارع  : ؟؟"
        android:id="@+id/street"
        android:textColor="#000"
        android:textSize="20sp"
        android:fontFamily="@font/vip"/>
    <ImageView
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_street"/>
</LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/bottom"
                android:paddingRight="5dp">

                <ImageView
                    android:paddingRight="5dp"
                    android:id="@+id/sentImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_out_text"
                    android:layout_gravity="right"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/area_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_area"
                    android:layout_gravity="right"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/offer_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_offers"
                    android:layout_gravity="right"
                    android:padding="10dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_share"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>