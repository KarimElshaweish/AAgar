<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.sourcey.materiallogindemo.OfferShare">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:onClick="finish"/>
        <TextView
            android:fontFamily="@font/vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="عروضى"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"/>
    </RelativeLayout>

    <ProgressBar
        android:indeterminateDrawable="@drawable/progress_custome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:id="@+id/pb"
        android:backgroundTint="@color/primary"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لاتوجود عروض"
        android:padding="10dp"
        android:id="@+id/noOffer"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv1"></android.support.v7.widget.RecyclerView>
</LinearLayout>